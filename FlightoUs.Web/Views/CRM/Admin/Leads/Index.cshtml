

@section Scripts
{
    <script src="~/js/CRM/Admin/Lead/Index.js?v=@DateTime.Now.Ticks.ToString()"></script>
}
<div class="right mT10">
    <a class="btn btn-success btn-sm" asp-action="AddEditLead" asp-controller="Home" asp-route-Id="0"> Add Lead</a>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Lead</strong>&nbsp; <span id="spanTotalRecords"></span>
            </div>
            <div class="card-body">
                <div id="div_message" class="note failure">
                    <p>
                        <span id="span_message"></span>
                    </p>
                </div>
                <div class="c1 filter">

                    <div class="right">
                        Search: <input id="txtSearch" style="" type="text" class="form-control search">
                        <a title="Search" style="cursor:pointer; margin-left:5px; " onclick="SearchUsers();"><i class="material-icons " style="position:relative; top:5px;">search</i></a>
                        <a title="Reset" style="cursor:pointer;" onclick="ResetUsers();"><i class="material-icons" style="position:relative; top:5px;">clear</i></a>
                    </div>
                </div>

                <table id="tbl" class="table">
                    <thead>
                        <tr>
                            <th class="gridSortingMenu" scope="col" sortable datafield="FirstName" caption="First Name"></th>
                            <th class="gridSortingMenu" scope="col" sortable datafield="LastName" caption="Last Name"></th>
                            <th class="gridSortingMenu" scope="col" sortable datafield="UserName" caption="User Name"></th>
                            <th class="gridSortingMenu" scope="col" sortable datafield="Email" caption="Email"></th>
                            <th class="gridSortingMenu" scope="col" sortable datafield="Telephone" caption="Telephone"></th>
                            <th class="gridSortingMenu" scope="col" sortable datafield="CNIC" caption="CNIC"></th>
                            <th scope="col" style="width:180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                @*Show Pager*@

                <div id="div_no_found" class="alert alert-info hide" role="alert">
                    No Lead Found. Please click on Add lead button to add a Lead.
                    @*This is a info alert with <a href="#" class="alert-link">an example link</a>. Give it a click if you like.*@
                </div>




            </div>
        </div>
    </div>


</div>



<script id="ListTemplateCustomers" type="text/x-jsrender">
    <tr>
        <td>{{:FirstName}}</td>
        <td>{{:LastName}}</td>
        <td>{{:UserName}}</td>
        <td>{{:Email}}</td>
        <td>{{:Telephone}}</td>
        <td>{{:CNIC}}</td>
        <td>
            <a href="/Admin/Users/AddEditUser?UserId={{:Id}}" class="text-primary mr-3" style="cursor:pointer;"><i class="material-icons" data-toggle="tooltip" data-placement="top" title="Edit" data-original-title="Clear">edit</i></a>
            <a onclick="DeleteUsers({{:Id}});" class="text-danger " style="cursor:pointer;"><i class="material-icons">delete_outline</i></a>
        </td>
    </tr>


</script>