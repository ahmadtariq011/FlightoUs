@using FlightoUs.Bll
@using FlightoUs.Model.Data
@section Scripts
{
    <script src="~/js/CRM/Admin/Remarks/AddEditRemarks.js?v=@DateTime.Now.Ticks.ToString()"></script>
}
@{
    var remarksData = (Remarks)ViewBag.remarks;
    BllUser bllUser = new BllUser();
    var userdata = bllUser.GetAllUsers();

    var leadid = ViewBag.Leadid;

}
<input type="hidden" id="hfLeadId" value="@leadid" />

<div class="row">

    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div id="BasicInfo" class="card" style="padding-bottom: 0px !important; margin-bottom: 0px;">
            <div class="card-header">
                <strong>Add Remarks</strong>
            </div>

            <div class="card-body card-block">
                <div id="div_message" class="note failure">
                    <p>
                        <span id="span_message"></span>
                    </p>
                </div>


                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="hf-email" class=" form-control-label">Details</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <textarea class="form-control" id="txtDetails" type="text" value="@remarksData.Details" required></textarea>
                    </div>
                </div>



                <div class="row form-group">
                    <div class="col col-md-3"><label for="hf-email" class=" form-control-label">Created By</label></div>
                    <div class="col-12 col-md-9">
                        <select class="form-control" id="txtCreatedBy" name="txtCreatedBy" required>
                            <option value="">Please Select</option>
                            @foreach (var user in userdata)
                            {
                                <option value="@user.Id">@Html.Raw(user.FirstName + ' ' + user.LastName)</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>


        <div class="card-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="SaveRemarks();">
                <i class="material-icons " id="iconcss" style="">save</i>Save
            </button>
            <button type="reset" class="btn btn-danger btn-sm" onclick="Cancel();">
                <i class="material-icons" id="iconcss">cancel</i>Cancel
            </button>
        </div>
    </div>
</div>
<div class="col-lg-3"></div>